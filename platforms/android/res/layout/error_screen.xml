<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp" >

    <com.kohlsphone.framework.view.component.views.GothamBoldTextView
        android:id="@+id/id_errorSceen_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/errorScreen_message"
        android:textColor="@android:color/black"
        android:layout_centerVertical="true" 
        android:layout_above="@+id/id_errorSceen_ok"/>

    <Button
        android:id="@+id/id_errorSceen_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:text="@string/ok"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:gravity="center" />

</RelativeLayout>