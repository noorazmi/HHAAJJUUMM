<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btn_actionbar_dropdown_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff0000" >

    <LinearLayout
        android:id="@+id/id_actionBar_list_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

	<LinearLayout
	    android:id="@+id/id_actionBar_list_icon_layout"
	    android:layout_width="50dp"
	    android:layout_height="match_parent"
	    android:orientation="horizontal" >

	    <ImageView
	        android:id="@+id/id_actionBar_list_icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_marginLeft="16dp" 
	        android:src="@drawable/list_icon"/>
	</LinearLayout>

        <TextView
            android:id="@+id/id_actionBar_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="@dimen/actionbar_Text_size" />
    </LinearLayout>

    <ImageView
        android:id="@+id/id_actionBar_app_image"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:src="@drawable/app_icon" />

    <FrameLayout
        android:id="@+id/id_actionBar_mainAction"
        android:layout_width="@dimen/actionbar_icon_width"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/id_actionBar_item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/navigation_drawer_image_paddingLeft"
            android:paddingRight="@dimen/navigation_drawer_image_paddingRight"
            android:visibility="visible" />

        <TextView
            android:id="@+id/id_actionBar_item_image_count"
            android:layout_width="@dimen/actionbar_icon_width"
            android:layout_height="@dimen/actionbar_icon_width"
            android:gravity="center"
            android:paddingBottom="19dp"
            android:paddingLeft="2dp"
            android:textAlignment="gravity"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </FrameLayout>

    <ImageView
        android:id="@+id/id_actionBar_extra_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/navigation_drawer_image_paddingRight"
        android:layout_toLeftOf="@+id/id_actionBar_mainAction"
        android:paddingLeft="@dimen/navigation_drawer_image_paddingLeft" />

</RelativeLayout>