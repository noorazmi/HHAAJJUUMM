<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="@style/umrah_heading"
                android:text="@string/umrah" >
            </TextView>

            <TextView
                style="@style/umrah_description"
                android:text="@string/umrah_first" >
            </TextView>

            <TextView
                style="@style/umrah_heading"
                android:text="@string/virtues_of_umrah" >
            </TextView>

            <TextView
                style="@style/umrah_description"
                android:text="@string/virtues_of_umrah_desc" >
            </TextView>

            <TextView
                style="@style/umrah_heading"
                android:text="@string/farz_act_umrah" >
            </TextView>

            <TextView
                style="@style/umrah_description"
                android:text="@string/farz_act_umrah_desc" >
            </TextView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>