<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- <item name="android:background">@color/app_theme</item> -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowDisablePreview">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="umrah_heading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/heading_bkg</item>
        <item name="android:textColor">@color/heading_umrah</item>
        <item name="android:paddingLeft">@dimen/heading_left</item>
        <item name="android:paddingRight">@dimen/heading_padding_right</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dua_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dua_margin_left</item>
        <item name="android:layout_marginRight">@dimen/dua_margin_right</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/dua_container_margin_top</item>
    </style>
    
    <style name="umrah_description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/heading_left</item>
        <item name="android:paddingTop">@dimen/desc_top</item>
        <item name="android:paddingBottom">@dimen/desc_bottom</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="dua_head">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/dua_head_background</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dua_head_padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/dua_head_foreground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="dua_pronounce">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/dua_pronounce_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/dua_pronounce_foreground</item>
    </style>

    <style name="dua_meaning">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/dua_meaning_background</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/dua_meaning_padding_top</item>
        <item name="android:paddingBottom">@dimen/dua_meaning_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/dua_meaning_padding_left</item>
        <item name="android:paddingRight">@dimen/dua_meaning_padding_right</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

</resources>