<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            style="@style/umrah_heading"
            android:text="@string/hajj_sixth_day"
            android:textAllCaps="true" >
        </TextView>

        <TextView
            style="@style/umrah_description"
            android:text="@string/the_procedures_of_this_day" >
        </TextView>

        <TextView
            style="@style/umrah_description"
            android:text="@string/rami_of_the_13th_dhul_hijjah" >
        </TextView>

    </LinearLayout>
</ScrollView>